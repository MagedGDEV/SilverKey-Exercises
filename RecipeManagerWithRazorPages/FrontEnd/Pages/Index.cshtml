@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container welcome">
    <div class="row">
        <div class="col-lg-5 col-md-12 welcome-div">
            <h2 class="welcome-message">Let's Start Cooking Tasty & Delicious Food</h2>
            <div class="welcome-question">
                <div>Want to learn cook from others and save you recipes for later?</div>
                <div>No need to worry again!</div>
            </div>
            <div class="welcome-buttons-div">
                <a asp-page="/Privacy" class="welcome-buttons btn btn-primary btn-lg">Explore Recipes</a>
                <a asp-page="/Error" class="welcome-buttons btn btn-outline-primary btn-lg">Explore Categories</a>
            </div>
        </div>
        <div id="carouselExampleControls" class="carousel slide col-lg-6 col-md-12 welcome-images" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/images/welcomeRecipes/recipe1.webp" class="d-block w-100 h-110" alt="food">
                </div>
                <div class="carousel-item">
                    <img src="/images/welcomeRecipes/recipe2.webp" class="d-block w-100 h-110" alt="food">
                </div>
                <div class="carousel-item">
                    <img src="/images/welcomeRecipes/recipe3.webp" class="d-block w-100 h-110" alt="food">
                </div>
                <div class="carousel-item">
                    <img src="/images/welcomeRecipes/recipe4.webp" class="d-block w-100 h-110" alt="food">
                </div>
                <div class="carousel-item">
                    <img src="/images/welcomeRecipes/recipe5.webp" class="d-block w-100 h-110" alt="food">
                </div>
                <div class="carousel-item">
                    <img src="/images/welcomeRecipes/recipe6.webp" class="d-block w-100 h-110" alt="food">
                </div>
            </div>
        </div>
    </div>
</div>


